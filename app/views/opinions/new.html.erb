<div class="container">
    <div class="page-header">
        <div class="col-md-12">
            <h1>
            	¡Danos tu opinión!
            </h1>
        </div>
    </div>
</div>
<div class="container">
	<form class="col-md-4"></form>
	<div class="col-md-4">
	<%= form_for [@place, @opinion], :html => { :multipart => true } do |f| %>
		<% if @opinion.errors.any? %>
		<ul>
			<% @opinion.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
			<% end %>
		</ul>
		<% end %>
	    <div class="form-group">
	    	<%= f.text_area :comment, class: "form-control input-lg", :placeholder => 'Tu opinión...' %>
	    </div>
	    <div class="form-group">
	    	<%= f.submit '¡Envía tu opinión!', class: "btn btn-lg btn-primary btn-block" %>
	    </div>
	    <div class="form-group">
	    	<%= f.text_field :user_id, :value => current_user.id, class: 'user-id' %>
	    </div>
	</div>
	<% end %>
	<form class="col-md-4"></form>
</div>
<div><%= link_to 'Back', place_path(@place) %></div>