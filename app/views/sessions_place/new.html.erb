<% if flash_message %>
    <div class="container">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="alert-msg-good">
                <%= flash_message %>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
<% end %>
<div class="container">
    <div class="page-header">
        <div class="col-md-12">
            <h1>
            	Introduce tus datos
            </h1>
        </div>
    </div>
</div>
<div class="container">
	<form class="col-md-4"></form>
	<div class="col-md-4">
	<%= form_for(:session, url: login_place_path) do |f| %>
		<div class="form-group">
	    	<%= f.text_field :name, class: "form-control input-lg", :placeholder => 'Nombre del establecimiento' %>
	    </div>
	    <div class="form-group">
	    	<%= f.password_field :password, class: "form-control input-lg", :placeholder => 'Contraseña' %>
	    </div>
	    <div class="form-group">
	    	<%= f.submit '¡Entrar!', class: "btn btn-primary btn-lg btn-block" %>
	    </div>
	</div>
	<% end %>
	<form class="col-md-4"></form>
</div>