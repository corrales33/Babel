<div class="container">
    <div class="page-header">
        <div class="col-md-12">
            <h1>
            	¡Último paso para apuntarte!
            </h1>
        </div>
    </div>
</div>
<div class="container">
	<form class="col-md-2"></form>
	<div class="col-md-8">
	<%= form_for [current_user, @meeting], :html => { :multipart => true } do |f| %>
	    <div class="panel panel-default">
	    	<div class="panel-heading">
	    		<h3 class="panel-title"> Reunión en <%= @meeting.place_meeting %> </h3>
	    	</div>
	    	<div class="panel-body">
	    		Reunión de <%= @user.languages_without_learning %> organizada por <%= @user.name %> con fecha <%= @meeting.date %> en <%= @meeting.place_meeting %>.
	    	</div>
	    </div>
	    <div class="form-group">
	    	<%= f.submit '¡Apuntarse!', class: "btn btn-primary btn-lg btn-block" %>
	    </div>
	    <div class="form-group">
	    	<%= f.text_field :participants, :value => current_user, class: 'user-id' %>
	    </div>
	</div>
	<% end %>
	<form class="col-md-2"></form>
</div>