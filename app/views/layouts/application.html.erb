<!DOCTYPE html>
<html>
	<head>
	  <title>Babel</title>
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
 		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css"> 
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top">
    		<div class="container">
        		<div class="navbar-header"></div>
        		<div id="navbar" class="navbar-collapse collapse">
	        		<ul class="nav navbar-nav">
	        			<% if current_user %>
						    <li><a href="#"> Bienvenid@ <%= current_user.name %> </a></li>
						    <li><a href="#"> <%= link_to "Log out", logout_user_path, method: "delete" %> </a></li>
						    <li><a href="#"> <%= link_to "Mi perfil", user_path(current_user) %> </a></li>
						<% elsif current_place %>
							<li><a href="#"> Bienvenid@ <%= current_place.name %> </a></li>
						    <li><a href="#"> <%= link_to "Log out", logout_place_path, method: "delete" %> </a></li>
						    <li><a href="#"> <%= link_to "Mi perfil", place_path(current_place) %> </a></li>
						<% else %>
							<li> <%= link_to "Crear una cuenta", 'signup' %> </li>
				    		<li class="dropdown"> 
				    			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"> Log in <span class="caret"></span></a>
				    			<ul class="dropdown-menu" role="menu">
									<li><a href="#"><%= link_to "Login User", 'login_user' %></a></li>  
									<li><a href="#"><%= link_to "Login Place", 'login_place' %></a></li>  
					          	</ul>	
				    		</li>
				    	<% end %>
					</ul>
				</div>
    		</div>
		</nav>
		<%= yield %>

		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>      
	    <script type="text/javascript" src=""></script>
	</body>
</html>
