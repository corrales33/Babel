<!DOCTYPE html>
<html>
	<head>
	  <title>Babel</title>
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-default navegator">
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      			<ul class="nav navbar-nav">
				<% if current_user %> 
			    	<li class="text-welcome"> Welcome <%= current_user.name %></li> 
			    	<li class="text-navegator"><%= link_to "Log out", logout_user_path, method: "delete" %></li>  
				<% elsif current_place %> 
			    	<li class="text-welcome"> Welcome <%= current_place.name %></li> 
			    	<li class="text-navegator"><%= link_to "Log out", logout_place_path, method: "delete" %></li>
		    	<% else %> 
			        <li class="text-navegator"><%= link_to "Create an account", 'signup' %></li>
				    <li class="dropdown">
				        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"> Log in <span class="caret"></span></a>
				        <ul class="dropdown-menu" role="menu">
							<li><%= link_to "Login User", 'login_user' %></a></li>  
							<li><%= link_to "Login Place", 'login_place' %></a></li>  
			          	</ul>
	        		</li>
				<% end %>
      			</ul>
			</div>
		</nav>
		<%= yield %>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>      
	    <script type="text/javascript" src=""></script>
	</body>
</html>
