<%= flash_message %>
<div class="container">
    <div class="row">
    	<div class="col-sm-1">
    	</div>
        <div class="col-sm-10">
            <div class="well details">
                <div class="col-sm-12">
                    <div class="col-xs-12 col-sm-4">
                        <h2 style="text-decoration:underline;"><%= @place.name %></h2>
                        <p><strong> Ciudad:</strong> <%= @place.city %> </p>
                        <p><strong> Direcci√≥n:</strong> <%= @place.address %> </p>
                        <p><strong> Horario:</strong> <%= @place.timetable %> </p>
                        <p><strong> Oferta actual:</strong> <%= @place.offers %> </p>
                        <p> <%= image_tag @place.image_offer_url.to_s, :class => "image-offer-profile" %> </p>
                        <% if current_place && current_place.name == @place.name %>
							<div><%= button_to 'Cambiar oferta', change_offer_path(@place), class: "btn-place-offer", :method => :get %></div>
						<% end %>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-lg-1">
                		<div>
							<%= image_tag @place.image_url.to_s, :class => "image-big-place" %>
						</div>
                    </div>
                </div>
        	</div>
        </div>
        <div class="col-sm-1">
    	</div>
    </div>
</div>
<div class="container">
    <div class="row">
    	<div class="col-sm-1">
    	</div>
        <div class="col-sm-10">
        	<div class="row">
        		<div class="col-sm-4">
		        	<% if current_place && current_place.name == @place.name %>
		        	<span><%= button_to 'Modificar datos', edit_place_path(@place), class: "btn-place-edit", :method => :get %></span>
					<% end %>
				</div>
				<div class="col-sm-4">
					<% if current_user || current_place %>
					<span><%= button_to 'Ver opiniones de los usuarios', place_opinions_path(@place), class: "btn-place-opinion", :method => :get %></span>
					<% end %>
				</div>
				<div class="col-sm-4">
					<% if current_place && current_place.name == @place.name %>
					<span><%= button_to 'Reuniones en tu establecimiento', place_meetings_path(@place), class: "btn-place-meeting", :method => :get %></span>
					<% end %>
				</div>
			</div>
        </div>
        <div class="col-sm-1">
    	</div>
	</div>
</div>

